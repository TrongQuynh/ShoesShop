 <!-- Pagingnation -->
 <nav class="product-pagination">
    <% if(totalPages > 0){ %> 
        <ul class="pagination">
            <li class="page-item">
                <% if(currentPage == 1){ %> 
                    <a class="page-link" href="#" aria-label="Previous" disabled>
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <% }else{ %>
                        <a class="page-link" href="/san-pham?page=1" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    <% } %>  
            </li>
            <% let i = Number(currentPage) > 3 ? Number(currentPage) - 2 : 1 %> 
            <% for(;i <= Number(currentPage) + 2 && i <= totalPages; i++){%>
                <% if(i == Number(currentPage)){ %> 
                    <li class="page-item"><a data-page="<%= i %>" class="page-link page-active" href="/san-pham?page=<%= i %>"><%= i %> </a></li>
                <% }else{ %> 
                    <li class="page-item"><a data-page="<%= i %>" class="page-link" href="/san-pham?page=<%= i %>"><%= i %> </a></li>
                <% } %> 
            <% } %>  
                
            <li class="page-item">
                <% if(currentPage == totalPages){ %> 
                    <a data-page="<%= i %>" class="page-link" href="#" aria-label="Next" disabled>
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                <% }else{ %> 
                    <a data-page="<%= i %>" class="page-link" href="/san-pham?page=<%= totalPages %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                <% } %> 
            </li>
        </ul>
    <% } %> 
</nav>